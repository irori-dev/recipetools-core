  "author": "Adachi Kenji <adachi@irori.dev>",
  "license": "MIT",
  "devDependencies": {
    "ajv": "^8.12.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsup": "^7.2.0",
    "typescript": "^5.4.0",
    "vitest": "^1.2.2"
  },
  "dependencies": {
    "ajv-formats": "^3.0.1"
  }
}
